@model UrunViewModel
@{
    ViewBag.Title = "Ürün Ekle";
}
<div class="row">
    <div class="col-md-offset-2 col-md-8">
        @Html.ValidationSummary()
        @using (Html.BeginForm("Ekle", "Urun", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.LabelFor(x => x.UrunAdi, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.UrunAdi, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Fiyat, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.Fiyat, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.KategoriId, new { @class = "col-sm-2 control-label" })
                <div class="col-sm-10">
                    @Html.DropDownListFor(x => x.KategoriId, (List<SelectListItem>)ViewBag.kategoriler, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Kategori Fotoğrafı</label>
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.Dosyalar, new { @class = "form-control", type = "file", multiple = true })
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-success">Ürün Ekle</button>
                </div>
            </div>
        }
    </div>
</div>
